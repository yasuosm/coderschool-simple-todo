<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:id="@+id/tv_todo"
        android:paddingLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_edit_text"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_below="@+id/tv_todo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_date"
        android:id="@+id/tv_due_date"
        android:layout_marginTop="8dp"
        android:paddingLeft="4dp"
        android:layout_below="@+id/et_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/not_set"
        android:id="@+id/tv_edit_due_date"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_due_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/iv_remove_due_date"
        android:contentDescription="@string/remove_due_date"
        android:layout_alignBottom="@+id/tv_edit_due_date"
        android:layout_alignRight="@+id/et_edit_text"
        android:layout_alignEnd="@+id/et_edit_text"
        android:layout_alignTop="@+id/tv_edit_due_date" />
</RelativeLayout>
